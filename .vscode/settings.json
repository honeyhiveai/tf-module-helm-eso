{
  // Terraform-specific settings
  "terraform.languageServer.enable": true,
  "terraform.languageServer.args": [
    "serve"
  ],
  "terraform.codelens.referenceCount": true,
  "terraform.validation.enableEnhancedValidation": true,

  // File associations
  "files.associations": {
    "*.tf": "terraform",
    "*.tfvars": "terraform",
    "*.hcl": "terraform"
  },

  // Auto-formatting
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,

  // Terraform formatting
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },

  "[terraform-vars]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // HCL formatting (for .tflint.hcl, etc.)
  "[hcl]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },

  // YAML formatting (for GitHub Actions, terraform-docs, trivy)
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },

  // JSON formatting
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // Markdown formatting
  "[markdown]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },

  // Go formatting (for tests)
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": false
  },

  // Shell script formatting
  "[shellscript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // File exclusions for performance
  "files.exclude": {
    "**/.terraform": true,
    "**/.terraform.lock.hcl": true,
    "**/terraform.tfstate": true,
    "**/terraform.tfstate.backup": true,
    "**/*.tfstate": true,
    "**/*.tfstate.*": true,
    "**/crash.log": true,
    "**/crash.*.log": true,
    "**/.cache": true
  },

  // Search exclusions
  "search.exclude": {
    "**/.terraform": true,
    "**/terraform.tfstate": true,
    "**/terraform.tfstate.backup": true,
    "**/*.tfstate": true,
    "**/*.tfstate.*": true,
    "**/node_modules": true,
    "**/.cache": true
  },

  // File watching exclusions for performance
  "files.watcherExclude": {
    "**/.terraform/**": true,
    "**/terraform.tfstate": true,
    "**/terraform.tfstate.backup": true,
    "**/*.tfstate": true,
    "**/*.tfstate.*": true,
    "**/.cache/**": true
  },

  // Editor behavior
  "editor.rulers": [80, 120],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // Git settings
  "git.ignoreLimitWarning": true,

  // Terminal settings
  "terminal.integrated.defaultProfile.linux": "bash",

  // Extension recommendations
  "extensions.recommendations": [
    "hashicorp.terraform",
    "ms-vscode.vscode-json",
    "redhat.vscode-yaml",
    "golang.go",
    "ms-vscode.makefile-tools",
    "davidanson.vscode-markdownlint"
  ],

  // Workspace trust
  "security.workspace.trust.untrustedFiles": "open",

  // Terraform validation
  "terraform.experimentalFeatures.validateOnSave": true,
  "terraform.experimentalFeatures.prefillRequiredFields": true,

  // Code lens settings
  "terraform.codelens.referenceCount": true,

  // IntelliSense settings
  "terraform.languageServer.terraform.path": "",
  "terraform.languageServer.terraform.timeout": "30s"
}
